                            <span class="input-group-addon">Duyuru Başlık</span>
                            <input id="msg" type="text" class="form-control" name="DuyuruBaslik">
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon">Duyuru İçerik</span>
                            <input id="msg" type="text" class="form-control" name="DuyuruIcerik">
                        </div>
                        <input type="submit" value="Ekle" />
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                </div>
            </div>

        </div>
    </div>
    <!-- //////MODALLLAR-->



    <div class="wrapper">
        <div class="sidebar" data-color="purple" data-image="~/assets/img/sidebar-5.jpg">
