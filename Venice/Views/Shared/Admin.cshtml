                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                </div>
            </div>

        </div>
    </div>


    <div id="Boyut" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Boyut Ekle</h4>
                </div>
                <div class="modal-body">
                    <form action="~/Admin/BoyutEkle" method="post">
                        <div class="input-group">
                            <span class="input-group-addon">Boyut</span>
                            <input id="msg" type="text" class="form-control" name="Boyut">
                        </div>
                        <input type="submit" value="Ekle" />
